<div class="container">
  <div class="row">
    <div class="col-sm-10 col-md-4 center-col">
      <h1 class="login-title">Login</h1>
      <div class="account-wall">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
          <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control the-email" %>
          <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control the-password" %>
          <%= f.submit "Login", class: "btn btn-lg btn-primary btn-block" %>
        <% end %>
      </div>
      <%= link_to "Create an account", new_registration_path(resource_name), class: "text-center new-account" %>
    </div>
  </div>
</div>
